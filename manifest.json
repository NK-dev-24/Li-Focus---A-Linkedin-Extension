{
  "manifest_version": 3,
  "name": "LinkedIn Distraction Reducer",
  "version": "1.0",
  "description": "Customize your LinkedIn experience by hiding unwanted sections",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png", 
    "128": "images/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://www.linkedin.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
  ,
  "host_permissions": [
    "https://*.linkedin.com/*"
  ]
}